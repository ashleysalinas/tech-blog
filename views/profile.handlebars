<section>
<h2>Hi, {{name}}!</h2>
<h2>Your Posts</h2>
<div class="post-list">
{{#each posts as |post|}}
<div>
    <p id="post_title">{{post.post_title}}</p>
    <p>Date: {{format_date post.date_posted}}</p>
    <p id="post_text">{{post.post_text}}</p>
    <button class="edit-button" button-id="{{post.id}}">Edit</button>
    <button id="delete">Delete</button>
</div>
<div class="edit-modal">
    <div class="modal-content">
        <form id = "editForm">
        <h2>Edit Your Post</h2>
        <p>Title:</p>
        <input type="text" id="editTitle"  value="{{post_title}}">
        <p>Text:</p>
        <input type="text" id="editText"  value="{{post_text}}">
        <input type="submit" value="Finish">
        <input type="hidden" name="edit-id" value="{{post.id}}" id= "postID"/>
        <span class="close" id="comment-close">&times;</span>
        </form>
    </div>
</div>
{{/each}}
</div>

<script type="text/javascript" src="/js/editAndDelete.js"></script>